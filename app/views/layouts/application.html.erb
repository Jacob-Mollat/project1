  </head>

  <body>
    <header class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <%= link_to "sample app", '#', id: "logo" %>
        <nav>
          <ul class="nav pull-right">
            <li><%= link_to "Home",    '#'%></li>
            <li><%= link_to "Help",    '#'%></li>
            <li><%= link_to "Sign in", '#'%></li>
          </ul>
        </nav>
      </header>
      <div class="container">
        <%= yield %>
      </div>
  </body>
</html>
